{% extends "base.html.twig" %}
{% block title %}  Connexion {% endblock %}
{% block contenu %}

    {% if form.valide is defined and form.valide == false %}
        <br/><br/>
        <div class="alert alert-danger" role="alert">
            Login ou mot de passe incorrect
        </div>
    {% endif %}
    <br/><br/>
    <div class="mx-auto" style="text-align: center;">
        <h3><em>Connexion</em> </h3>
    </div>
    <br/><br/>
    <div class="mx-auto" style="width: 500px">
        <form class="text-center" method="POST" action="index.php?page=connexion">
            <div class="form-group row" style="margin-bottom : 5px;" >
                <div class="col-sm-12" >
                    <input type="email" id="email" name="email" class="form-control" placeholder="Email" required autofocus>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="password" id="mdp" name="mdp" class="form-control" placeholder="Mot de Passe" required >
                </div>
            </div>

            <br/><br/>
            <div class="form-group row">
                <div class="col-sm-10" style="padding-left: 100px">
                    <button type="submit" class="btn-lg btn-success" name="btConnecter">Se connecter</button>
                </div>
            </div>
                <small><a href="index.php?page=inscription"><em>Pas de compte ? Rejoignez-nous sans attendre !</em> </a></small>

        </form>
    </div>
{% endblock %}